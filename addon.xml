<addon id="plugin.video.nextcloud-video-streaming" name="NextCloud Video Streaming" version="0.1" provider-name="Julius Kempa">
  <requires>
    <import addon="xbmc.python" version="2.19.0"/>
  </requires>
  <!-- addon.py, below, is the entry point -->
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video image</provides>
